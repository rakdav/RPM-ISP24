<Window x:Class="Lesson30.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson30"
        mc:Ignorable="d"
        Title="Анимация" Height="300" Width="300">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Content" Value="Button"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="60"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Button.MouseEnter">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                                   Storyboard.TargetProperty="Width"
                                   From="60" To="80" Duration="0:0:1"/>
                                <DoubleAnimation
                                   Storyboard.TargetProperty="Height"
                                   From="25" To="30" Duration="0:0:1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
                <EventTrigger RoutedEvent="Button.MouseLeave">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation
                   Storyboard.TargetProperty="Width"
                   From="80" To="60" Duration="0:0:1"/>
                                <DoubleAnimation
                   Storyboard.TargetProperty="Height"
                   From="30" To="25" Duration="0:0:1"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
