<Window x:Class="Lesson34.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson34"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--<Button Width="100" Height="100" Canvas.Top="300" Canvas.Left="200"
                Background="Red"/>-->
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0">
            <TextBox x:Name="textBox" MouseDown="textBox_MouseDown" />
        </DockPanel>
        <Button x:Name="button" Grid.Row="1" AllowDrop="True" Drop="button_Drop" />
    </Grid>
</Window>
