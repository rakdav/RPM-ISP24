<Window x:Class="Lesson32.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lesson32"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Grid.Column="0">
            Processed ...
        </Label>
        <TextBox Grid.Row="1" Grid.Column="0" Margin="10"/>
        <Grid Grid.Row="2" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="cmdCancel" Grid.Row="0" Grid.Column="0" Margin="10,10,0,10"
                    Content="Cancel" Click="cmdCancel_Click"/>
            <Button x:Name="cmdProcess" Grid.Row="0" Grid.Column="2" Margin="0,10,10,10"
                    Content="Rotate" Click="cmdProcess_Click"/>
        </Grid>
    </Grid>
</Window>
